<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <parent>
    <groupId>lombok-intellij-plugin</groupId>
    <artifactId>lombok-intellij-plugin-parent</artifactId>
    <version>1.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>lombok-api</artifactId>

  <properties>
    <lombok-annotations.includes>lombok/extern/**,lombok/experimental/**,lombok/Builder.java,
      lombok/AccessLevel.java,lombok/*ArgsConstructor.java,lombok/Cleanup.java,lombok/Data.java,lombok/Delegate.java,
      lombok/Getter.java,lombok/Setter.java,lombok/Equals*.java,lombok/NonNull.java,lombok/Synchronized.java,
      lombok/ToString.java,lombok/SneakyThrows.java,lombok/Value.java,lombok/val.java,lombok/Singular.java,
      lombok/core/handlers/Singulars.java,lombok/core/handlers/singulars.txt
    </lombok-annotations.includes>
    <hrisey-annotations.includes>
      hrisey/Parcelable.java,hrisey/Preferences.java
    </hrisey-annotations.includes>
  </properties>

  <prerequisites>
    <maven>${maven.min.version}</maven>
  </prerequisites>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>lombok</id>
            <goals>
              <goal>unpack</goal>
            </goals>
            <phase>generate-sources</phase>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.projectlombok</groupId>
                  <artifactId>lombok</artifactId>
                  <version>${lombok.version}</version>
                  <type>jar</type>
                  <classifier>sources</classifier>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/generated-sources/lombok</outputDirectory>
                </artifactItem>
              </artifactItems>
              <includes>${lombok-annotations.includes}</includes>
            </configuration>
          </execution>
          <execution>
            <id>hrisey</id>
            <goals>
              <goal>unpack</goal>
            </goals>
            <phase>generate-sources</phase>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>pl.mg6.hrisey</groupId>
                  <artifactId>hrisey</artifactId>
                  <version>${hrisey.version}</version>
                  <type>jar</type>
                  <classifier>sources</classifier>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/generated-sources/hrisey</outputDirectory>
                </artifactItem>
              </artifactItems>
              <includes>${hrisey-annotations.includes}</includes>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>${project.build.directory}/generated-sources/lombok</source>
                <source>${project.build.directory}/generated-sources/hrisey</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>